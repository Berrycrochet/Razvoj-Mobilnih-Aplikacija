<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SHM_ver1.Pages.Admin.AdminApplicationsPage"
             Title="Applications">

    <CollectionView ItemsSource="{Binding Applications}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Padding="10" Margin="5" BackgroundColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="User ID:" FontAttributes="Bold"/>
                        <Label Text="{Binding UserId}"/>

                        <Label Text="Status:" FontAttributes="Bold"/>
                        <Label Text="{Binding Status}"/>

                        <Button Text="Accept"
        Clicked="Accept_Clicked"/>

                        <Button Text="Reject"
        Clicked="Reject_Clicked"/>

                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>

