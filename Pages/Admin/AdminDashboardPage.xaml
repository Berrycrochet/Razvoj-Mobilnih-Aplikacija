<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Side_Hustle_Manager.Pages.Admin.AdminDashboardPage"
             Title="Admin Dashboard">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- FILTER PO KATEGORIJI -->
        <Picker x:Name="CategoryPicker"
                Title="Filtriraj po kategoriji"
                SelectedIndexChanged="FilterChanged"/>

        <!-- FILTER PO POSLODAVCU -->
        <Picker x:Name="EmployerPicker"
                Title="Filtriraj po poslodavcu"
                SelectedIndexChanged="FilterChanged"/>

        <CollectionView ItemsSource="{Binding SideHustles}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5" BackgroundColor="LightGray">
                        <VerticalStackLayout Spacing="6">

                            <Label Text="{Binding Title}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>

                            <Label Text="{Binding Description}" FontSize="14"/>

                            <Label Text="{Binding PayDisplay}"
                                   FontSize="14"
                                   TextColor="Green"/>

                            <Label Text="{Binding EmployerName}"
                                   FontSize="12"
                                   TextColor="Gray"/>

                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Uredi"
                                        Clicked="Edit_Clicked"
                                        CommandParameter="{Binding .}"/>

                                <Button Text="IzbriÅ¡i"
                                        BackgroundColor="IndianRed"
                                        TextColor="White"
                                        Clicked="Delete_Clicked"
                                        CommandParameter="{Binding .}"/>

                                <Button Text="Prijave"
                                        Clicked="Applications_Clicked"
                                        CommandParameter="{Binding .}"/>
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
