<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SHM_ver1.Pages.Admin.AdminDashboardPage"
             Title="Dashboard">

    <CollectionView ItemsSource="{Binding SideHustles}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Padding="10" Margin="5" BackgroundColor="LightGray">

                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Title}"
                               FontSize="18"
                               FontAttributes="Bold"
                               />

                        <Label Text="{Binding Description}"
                               FontSize="14"/>

                        <Label Text="{Binding Pay, StringFormat='Pay: {0:C}'}"
                               TextColor="Green"/>

                        <HorizontalStackLayout Spacing="10">
                            <Button Text="Uredi"
                                    Clicked="Edit_Clicked"
                                    CommandParameter="{Binding .}"/>

                            <Button Text="IzbriÅ¡i"
                                    BackgroundColor="IndianRed"
                                    TextColor="White"
                                    Clicked="Delete_Clicked"
                                    CommandParameter="{Binding .}"/>

                            <Button Text="Applications"
                                        Clicked="Applications_Clicked"
                                        CommandParameter="{Binding .}" />                   

                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    
                    
                    
                    
                    
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
        
        
        
    </CollectionView>
    
</ContentPage>