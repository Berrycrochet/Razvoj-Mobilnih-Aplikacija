<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Side_Hustle_Manager.Pages.User.UserSideHustlePage"
             >
   
    <CollectionView ItemsSource="{Binding MySideHustles}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10">
                    <VerticalStackLayout Spacing="4" Padding="10">


                        <Label Text="{Binding Title}"
      FontAttributes="Bold"
      FontSize="16"/>

                        <Label Text="{Binding Description}"
      FontSize="13"
      TextColor="Gray"/>

                        <Label Text="{Binding Category}"
      FontSize="12"
      TextColor="DarkGreen"/>

                        <Label Text="{Binding PayDisplay}"
      FontAttributes="Bold"/>

                        <Frame Padding="6"
  CornerRadius="8"
  BackgroundColor="{Binding StatusColor}">
                            <Label Text="{Binding StatusDisplay}"
      TextColor="White"
      FontAttributes="Bold"
      FontSize="12"/>
                        </Frame>


                        <Label Text="{Binding AppliedAt, StringFormat='Prijavljeno: {0:dd.MM.yyyy}'}"
      FontSize="11"
      TextColor="Gray"/>

                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>